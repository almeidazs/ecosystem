{
	"name": "@abacatepay/eslint-plugin",
	"version": "0.1.2",
	"type": "module",
	"main": "dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"author": {
		"name": "AbacatePay",
		"email": "opensource@abacatepay.com",
		"url": "https://abacatepay.com"
	},
	"maintainers": [
		{
			"name": "Almeida",
			"url": "https://github.com/almeidazs"
		}
	],
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "bun test",
		"build": "tsc",
		"types": "rm -rf dist && bun run scripts/version.ts && bun build src/index.ts --outdir dist --target node && bun run types",
		"prepublishOnly": "bun run build"
	},
	"peerDependencies": {
		"eslint": "^9.39.2"
	},
	"devDependencies": {
		"@types/eslint": "^9.6.1",
		"typescript": "^5"
	},
	"description": "Do not hardcode your AbacatePay secrets with this plugin",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AbacatePay/ecosystem.git"
	},
	"bugs": {
		"url": "https://github.com/AbacatePay/abacatepay-eslint/issues"
	},
	"homepage": "https://github.com/AbacatePay/abacatepay-eslint#readme",
	"keywords": [
		"eslint",
		"eslint-plugin",
		"security",
		"secrets",
		"abacatepay",
		"lint"
	],
	"engines": {
		"node": ">=18"
	},
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"eslintConfig": {
		"env": {
			"node": true
		}
	}
}
